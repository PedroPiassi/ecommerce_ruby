<%= simple_form_for([:admin, @product]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, label: 'Nome' %>
    <%= f.input :image, label: 'Imagem' %>
    <%= f.input :description, label: 'Descrição' %>
    <%= f.input :price, label: 'Preço' %>
    <%= f.input :publish, label: 'Publicado' %>
    <%= f.input :promo, label: 'Promoção' %>
    <%= f.input :promo_price, label: 'Preço Promoção' %>
    <%= f.association :category, include_blank: false, label: 'Categoria' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Salvar', class: 'btn btn-primary' %>
  </div>
<% end %>
