<%= turbo_frame_tag :bootstrap_modal, target: :_top do %>
    <div class="modal fade" id="staticBackdrop" data-controller="modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Produto</h1>
                    <button 
                        type="button" 
                        class="btn-close" 
                        data-bs-dismiss="modal" 
                        aria-label="Close" 
                        style="background: none; border: none"
                    >
                        X
                    </button>
                </div>
                <div class="modal-body">
                    <%= render "admin/products/form", product: @product %>
                </div>
            </div>
        </div>
    </div>
<% end %>